(jbuild_version 1)

(executable (
  (name unit_tests)
  (modules (unit_tests))
  (libraries (General))
))

(alias (
  (name runtest)
  (deps (unit_tests.bc))
  (action (run ${exe:unit_tests.bc}))
))

